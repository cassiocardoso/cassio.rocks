/* ============================== *\
 * Typography
\* ============================== */

body
  color #222
  font-family "Open Sans", sans-serif
  font-size 20px
  font-weight 300
  line-height 1.8

h1
  font-size 48px
  font-weight 300
  margin 2.25rem 0 1.25rem 0
  padding 1rem 0

h2
  font-size 32px
  font-weight 300
  margin 1.75rem 0 1.25rem 0
  padding .5rem 0

h3
  display inline-block
  font-weight 300
  margin 1.5rem 0 1rem 0
  padding .5rem 0

pre,
code
  font-family "Fira Mono", monospace
