<div class="half half--left"
  style="background: linear-gradient(rgba(44,45,51, .5),
    rgba(44,45,51, .9)),
    url('<%= page.background %>') no-repeat center;">
  <div class="content">
    <h1 class="site-title"><%= page.title %></h1>
    <%- partial('_partial/social-icons') %>
  </div> <!-- /.content -->
</div> <!-- /.half -->

<div class="half half--right">
  <div class="content">
    <%- partial('_partial/nav') %>
    <article class="article">
      <%- page.content %>
    </article>
    <% if(page.title === 'Contact me') { %>
        <%- partial('_partial/contact-form') %>
    <% } %>
    <%- partial('_partial/footer') %>
  </div> <!-- /.content -->
</div> <!-- /.half -->
